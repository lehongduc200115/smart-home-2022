{
  "name": "ms-node",
  "version": "1.0.0",
  "description": "NodeJS Microservice",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:cov": "npm run test -- --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "watch-ts": "tsc -w",
    "lint": "eslint ./src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "node copyFile.js --source=.env --destination=dist/.env && npm run copy:assets",
    "build": "tsc",
    "prestart": "node copyFile.js --source=.env.default --destination=.env && npm run build",
    "start": "node dist/src/server.js",
    "start:prof": "npm run prestart && clinic bubbleprof -- node dist/src/server.js",
    "start:flame": "npm run prestart && clinic flame -- node dist/src/server.js",
    "watch": "nodemon --watch src -e ts --exec npm run start",
    "debug": "nodemon --inspect src/server.ts",
    "migrate": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:up": "migrate up --migrations-dir=./dist/migrations/changes",
    "migrate:list": "migrate list --migrations-dir=./dist/migrations/changes",
    "copy:assets": "node copyFile.js --source=src/rundeck/jobDefinitions/job_schema.yml --destination=dist/src/rundeck/jobDefinitions/job_schema.yml "
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build",
      "pre-push": "npm run test:cov"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "PTC",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^18.4.1",
    "@hapi/hoek": "^9.1.0",
    "@hapi/inert": "^5.2.1",
    "@hapi/joi": "^16.1.8",
    "@hapi/joi-date": "^2.0.0",
    "@hapi/vision": "^5.5.2",
    "@joi/date": "^2.1.0",
    "@swat/hapi-common": "^1.0.1",
    "@types/bull": "^3.15.4",
    "@types/ioredis": "^4.17.7",
    "@types/qs": "^6.9.3",
    "axios": "^0.24.0",
    "cls-hooked": "^4.2.2",
    "dotenv": "^8.2.0",
    "hapi-cors": "1.0.3",
    "hapi-pino": "^8.3.0",
    "hapi-swagger": "^11.0.2",
    "hot-formula-parser": "^4.0.0",
    "i18n-mongo": "^1.1.5",
    "ioredis": "^4.19.2",
    "ioredis-mock": "^5.2.0",
    "joi-extract-type": "^15.0.0",
    "joi-objectid": "^3.0.1",
    "json-rules-engine": "^6.1.2",
    "kafkajs": "^1.14.0",
    "lodash": "^4.17.20",
    "logform": "^2.2.0",
    "migrate": "^1.7.0",
    "mockdate": "^3.0.2",
    "moment-timezone": "^0.5.34",
    "mongoose": "^5.13.7",
    "mongoose-i18n-localize": "^0.3.0",
    "qs": "^6.9.4",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "@types/cls-hooked": "^4.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/hapi": "^18.0.2",
    "@types/hapi__hoek": "^9.0.1",
    "@types/hapi__inert": "^5.2.0",
    "@types/hapi__joi": "^16.0.9",
    "@types/hapi__vision": "^5.5.0",
    "@types/hapi-pino": "^8.0.1",
    "@types/jest": "^26.0.5",
    "@types/lodash": "^4.14.136",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^12.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "expose-gc": "^1.0.0",
    "husky": "^2.7.0",
    "jest": "^26.6.3",
    "lint-staged": "^8.2.1",
    "migrate-mongo": "^8.1.4",
    "mongodb-memory-server": "^6.9.2",
    "prettier": "^1.18.2",
    "sonarqube-scanner": "^2.7.0",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.7.2"
  }
}
